{% extends 'monTemplate.html.twig' %}


{% block title %}Prostage - Entreprises{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
 
  {% if stages is not empty %}
  <h2>Liste des stages de {{ stages[0].entreprise.nom }} </h2>
  
  {% else %}
  <h2> Cette entreprise ne propose pas de stages </h2>

  {% endif %}

</div>

 <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Stage</th>
         <th scope="col">Détails</th>
        </thead>
        <tbody>
           
           {% for stageCourant in stages %}
           
           <tr>
             <td> {{stageCourant.titre}} </td>            
             <td> <a href = "{{ path('pro_stage_id', {'id': stageCourant.id}) }}"> Détails</a></td>
           </tr>

           {% endfor %}

           </tbody>
      </table>
{% endblock %}