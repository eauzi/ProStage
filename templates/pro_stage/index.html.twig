{% extends 'monTemplate.html.twig' %}

{% block title %}ProStage{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur ProStage</h1>
    
    <ul>
    <li> <a href="{{ path('pro_stage_entreprise') }}"> Liste des entreprises</a> </li>
    <li> <a href="{{ path('pro_stage_formations') }}"> Liste des formations</a> </li>
    </ul><br/>

    <h2> Liste des stages </h2> <br/>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Numéro</th>
            <th scope="col">Stage</th>
            <th scope="col">Entreprise</th>
            <th scope="col">Détails</th>
          </tr>
        </thead>
        <tbody>
         
         {% for stageCourant in stages %}
          <tr>
            <th scope="row"> {{loop.index}} </th>
            <td> {{stageCourant.titre}} </td>
            <td> {{stageCourant.entreprise.nom}} </td>
            <td> <a href = "{{ path('pro_stage_id', {'id':stageCourant.id }) }}"> Détails</a></td>
          </tr>
         {% endfor%}
 
        </tbody>
      </table>

</div>
{% endblock %}

