{% extends 'monTemplate.html.twig' %}


{% block contenu %}
    <h1>Formations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomLong</th>
                <th>NomCourt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.nomLong }}</td>
                <td>{{ formation.nomCourt }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">Consulter</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>
                    <a href="{{ path('formation_delete', {'id': formation.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de formations trouvées.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Créer une formation</a>
{% endblock %}
